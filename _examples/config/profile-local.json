{
  "debug": true,
  "cluster": {
    "rpc": {
    },
    "discovery": {
      "mode": "default",
      "@mode": "mode值可配置: default,master,etcd，则相应读取下面对应的配置信息",
      "master": {
        "master_node_id": "master-1",
        "retry_interval": 2
      },
      "etcd": {}
    }
  },
  "node": {
    "web": [
      {
        "node_id": "web-1",
        "address": "127.0.0.1:10820",
        "rpc_address": "127.0.0.1:30820",
        "__settings__": {
          "maintain_state": 2,
          "ref_logger": "game_log"
        },
        "enable": true
      }
    ],
    "game": [
      {
        "node_id": "game-1",
        "address": ":34590",
        "rpc_address": "127.0.0.1:20860",
        "__settings__": {
          "maintain_state": 2,
          "db_id_list": [
            "game_db_1"
          ],
          "ref_logger": "game_log"
        },
        "enable": true
      }
    ],
    "master": [
      {
        "node_id": "master-1",
        "address": ":30000",
        "rpc_address": "127.0.0.1:30001",
        "__settings__": {
          "ref_logger": "game_log"
        },
        "enable": true
      }
    ]
  },
  "logger": {
    "game_log": {
      "level": "debug",
      "enable_write_file": true,
      "enable_console": true,
      "file_path": "logs/game.log",
      "max_size": 128,
      "max_age": 7,
      "max_backups": 0,
      "compress": false,
      "time_format": "15:04:05.000",
      "print_caller": true
    },
    "test_handler": {
      "level": "debug",
      "enable_write_file": false,
      "enable_console": true,
      "file_path": "logs/test_handler.log",
      "max_size": 16,
      "max_age": 7,
      "max_backups": 0,
      "compress": false,
      "time_format": "15:04:05.000",
      "print_caller": true
    }
  },
  "data_config": {
    "parser": "json",
    "data_source": "redis",
    "file": {
      "file_path": "data/",
      "ext_name": ".json",
      "reload_time": 3000
    },
    "redis": {
      "prefix_key": "data_config",
      "subscribe_key": "data_config_change",
      "address": "127.0.0.1:6379",
      "password": "",
      "db": 7
    }
  },
  "db_queue": {
    "db_pool_size": "4",
    "table_submit_frequency": "1000",
    "table_submit_num": "200",
    "shutdown_table_submit_frequency": "1000",
    "shutdown_table_submit_num": "200"
  },
  "db": {
    "center_db_group": [
      {
        "enable": true,
        "db_id": "center_db_1",
        "db_name": "dev_xgame_center",
        "host": "192.168.1.20",
        "user_name": "gameserver",
        "password": "password",
        "max_idle_connect": 4,
        "max_open_connect": 8,
        "log_mode": true
      }
    ],
    "game_db_group": [
      {
        "enable": true,
        "db_id": "game_db_1",
        "db_name": "game_db_1",
        "host": "192.168.1.20",
        "user_name": "gameserver",
        "password": "password",
        "max_idle_connect": 4,
        "max_open_connect": 8,
        "log_mode": true
      }
    ]
  }
}