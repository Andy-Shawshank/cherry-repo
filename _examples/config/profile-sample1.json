{
  "debug": true,
  "cluster": {
    "discovery": {
      "mode": "nats",
      "@mode": "mode可配置: default,nats,etcd，对应读取下面的配置信息",
      "etcd": {},
      "nats": {
        "master_node_id": "master-1"
      }
    },
    "nats": {
      "address": "nats://127.0.0.1:4222",
      "reconnect_delay": 1,
      "max_reconnects": 10,
      "request_timeout": 2,
      "user": "",
      "password": ""
    }
  },
  "node": {
    "master": [
      {
        "node_id": "master-1",
        "address": "",
        "rpc_address": "127.0.0.1:10001",
        "__settings__": {
          "ref_logger": "master_log"
        },
        "enable": true
      }
    ],
    "gate": [
      {
        "node_id": "gate-1",
        "address": ":10010",
        "rpc_address": "127.0.0.1:10101",
        "__settings__": {
          "db_id_list": [
            "game_db_1"
          ],
          "ref_logger": "gate_log"
        },
        "enable": true
      }
    ],
    "game": [
      {
        "node_id": "1000",
        "address": "",
        "rpc_address": "127.0.0.1:10201",
        "__settings__": {
          "db_id_list": [
            "game_db_1"
          ],
          "ref_logger": "game_log"
        },
        "enable": true
      }
    ],
    "cross": [
      {
        "node_id": "cross-1",
        "address": "",
        "rpc_address": "127.0.0.1:10301",
        "__settings__": {
          "db_id_list": [
            "game_db_1"
          ],
          "ref_logger": "cross_log"
        },
        "enable": true
      }
    ],
    "web": [
      {
        "node_id": "web-1",
        "address": ":80",
        "rpc_address": "127.0.0.1:10401",
        "__settings__": {
          "ref_logger": "master_log"
        },
        "enable": true
      }
    ]
  },
  "logger": {
    "master_log": {
      "level": "debug",
      "enable_write_file": false,
      "enable_console": true,
      "file_path": "logs/master.log",
      "max_size": 16,
      "max_age": 7,
      "max_backups": 0,
      "compress": false,
      "time_format": "15:04:05.000",
      "print_caller": true
    },
    "gate_log": {
      "level": "debug",
      "enable_write_file": false,
      "enable_console": true,
      "file_path": "logs/gate.log",
      "max_size": 16,
      "max_age": 7,
      "max_backups": 0,
      "compress": false,
      "time_format": "15:04:05.000",
      "print_caller": true
    },
    "game_log": {
      "level": "debug",
      "enable_write_file": true,
      "enable_console": true,
      "file_path": "logs/game.log",
      "max_size": 128,
      "max_age": 7,
      "max_backups": 0,
      "compress": false,
      "time_format": "15:04:05.000",
      "print_caller": true
    },
    "cross_log": {
      "level": "debug",
      "enable_write_file": false,
      "enable_console": true,
      "file_path": "logs/cross.log",
      "max_size": 16,
      "max_age": 7,
      "max_backups": 0,
      "compress": false,
      "time_format": "15:04:05.000",
      "print_caller": true
    }
  }
}