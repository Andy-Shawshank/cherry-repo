{
  "debug": true,
  "cluster": {
    "discovery": {
      "mode": "nats",
      "@mode": "mode=default,从profile-{x}.json读取node节点的配置数据",
      "@mode": "mode=nats,通过nats->master_node_id获取已注册的节点",
      "@mode": "mode=etcd,通过etcd同步已注册节点"
    },
    "nats": {
      "master_node_id": "master-1",
      "address": "nats://dev.com:4222",
      "reconnect_delay": 1,
      "max_reconnects": 0,
      "request_timeout": 2,
      "user": "",
      "password": ""
    }
  },
  "node": {
    "master": [
      {
        "node_id": "master-1",
        "address": "",
        "__settings__": {
          "ref_logger": "master_log"
        },
        "enable": true
      }
    ],
    "gate": [
      {
        "node_id": "gate-1",
        "address": ":10010",
        "__settings__": {
          "db_id_list": [
            "game_db_1"
          ],
          "ref_logger": "gate_log"
        },
        "enable": true
      }
    ],
    "game": [
      {
        "node_id": "1000",
        "address": "",
        "__settings__": {
          "db_id_list": [
            "game_db_1"
          ],
          "ref_logger": "game_log"
        },
        "enable": true
      }
    ],
    "cross": [
      {
        "node_id": "cross-1",
        "address": "",
        "__settings__": {
          "db_id_list": [
            "game_db_1"
          ],
          "ref_logger": "cross_log"
        },
        "enable": true
      }
    ],
    "web": [
      {
        "node_id": "web-1",
        "address": ":80",
        "__settings__": {
          "ref_logger": "master_log"
        },
        "enable": true
      }
    ]
  },
  "logger": {
    "master_log": {
      "level": "debug",
      "enable_console": false,
      "enable_write_file": true,
      "file_link_path": "logs/master.log",
      "file_path_format": "logs/master_%Y%m%d%H%M.log"
    },
    "gate_log": {
      "level": "debug",
      "enable_console": false,
      "enable_write_file": true,
      "file_link_path": "logs/gate.log",
      "file_path_format": "logs/gate_%Y%m%d%H%M.log"
    },
    "game_log": {
      "level": "debug",
      "enable_console": false,
      "enable_write_file": true,
      "file_link_path": "logs/game.log",
      "file_path_format": "logs/game_%Y%m%d%H%M.log"
    },
    "cross_log": {
      "level": "debug",
      "enable_console": false,
      "enable_write_file": true,
      "file_link_path": "logs/cross.log",
      "file_path_format": "logs/cross_%Y%m%d%H%M.log"
    }
  }
}